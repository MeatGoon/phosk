<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testsever.project.testVO">

	<select id="register"  resultType="usermem">
		select * from phosk_member
	</select>
	<select id="cardinfoForm"  resultType="usercard">
		select * from phosk_cardInfo
	</select>
	<select id="login" resultType="usermem">
		SELECT member_id, member_pwd 
		  FROM phosk_member
		 WHERE member_id = #{member_id}
		   AND member_pwd = #{member_pwd}   
	</select>
	
	<insert id="insertMember">
		insert into phosk_member(member_nic,member_id,member_pwd)
		values(#{member_nic},#{member_id},#{member_pwd})	
	</insert>
	<insert id="insertCard" >
		insert into phosk_cardInfo(cardinfo_bank,cardinfo_holderName,cardinfo_cardNum,cardinfo_dealine,cardinfo_cardCVC,cardinfo_accountpwd,cardinfo_cardpwd)
		values(#{cardinfo_bank},#{cardinfo_holderName},#{cardinfo_cardNum},#{cardinfo_dealine},#{cardinfo_cardCVC},#{cardinfo_accountpwd},#{cardinfo_cardpwd})	
	</insert> 
	
	<update id = "updatemember">
		update phosk_member
		set
			member_nic=#{member_nic}
			member_pwd=#{member_pwd}
		where
			member_id=#{member_id}			
	</update>
</mapper>
